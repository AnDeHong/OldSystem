<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.mapper.ActivityMapper">
    <!-- 查询用户信息 -->
    <select id="getAll" resultType="com.example.entity.Activity">
        SELECT * FROM activities
        <where>
            <if test="name != null and name != '' ">
                and name LIKE "%"#{name}"%"
            </if>
            <if test="createBy != null and createBy != '' ">
                and create_by LIKE "%"#{createBy}"%"
            </if>
            <if test="startDate != '' and startDate != null ">
                and start_date >= #{startDate}

            </if>
            <if test="endDate != '' and endDate != null ">
                and #{endDate} >= end_date
            </if>
            <if test="status != '' and status != null">
                and status = #{status}
            </if>
            and delete_mark = 'N'
        </where>
    </select>

    <select id="getById" parameterType="com.example.entity.Activity">
        select * from activities where id = #{id} and delete_mark = 'N'
    </select>
</mapper>