<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.mapper.HealthDataMapper">
    <!-- 查询用户信息 -->
    <select id="getAll" resultType="com.example.entity.HealthData">
        SELECT *
        FROM health_data
        <where>
            <if test="username != null and username != '' ">
                and username LIKE "%"#{username}"%"
            </if>
        </where>
    </select>

    <select id="getLast" resultType="com.example.entity.Notice">
        SELECT *
        FROM health_data hd
        ORDER BY hd.index DESC
            LIMIT 1;
    </select>

    <select id="getAllByIndex" resultType="com.example.entity.HealthData">
        SELECT *
        FROM health_data where index = #{index}
    </select>
</mapper>